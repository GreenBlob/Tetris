#include <stdio.h>
#include <stdlib.h>
#include <time.h>
char Campo[20][10];

void ConstruirCampo();
void PrintarCampo();
void ConstruirNovaPeca();

typedef struct
{
int Posicao_1X;
int Posicao_1Y;
int Posicao_2X;
int Posicao_2Y;
int Posicao_3X;
int Posicao_3Y;
int Posicao_4X;
int Posicao_4Y;

}Peca;

int main()
{

ConstruirCampo();
int GameOver = 0;
while(!GameOver)//loop principal
    {

    EliminarLinhasCompletas();
    ConstruirNovaPeca();
    while(!PecaCaiu)//loop que verifica se a peca atual caiu
        {
        int Turno = 500;//tempo em ms que demora para uma peca cair um quadrado
        int CurrentTime = time();

        Gravidade();
        PrintarCampo();
        while (time() < CurrentTime+Turno)//loop que engloba a passagem de um turno
            {
            //gira a peca se o jogador pressionar 'para cima'
            //move a peca se o jogador pressionar 'esquerda' ou 'direita'
            //assiona Gravidade() se o jogador pressionar 'para baixo'
            //SE o jogador modificar a peca, PrintarCampo()
            }
        }
    }
}

void ConstruirCampo()
    {
    for (int i =0; i<20; i++)
        {
        for (int j =0; j<10; j++)
            {
            Campo[i][j] = '.';
            }
        }
    }

void PrintarCampo()
    {
    for (int i =0; i<20; i++)
        {
        for (int j =0; j<10; j++)
            {
            printf("%c", Campo[i][j]);
            }
        printf("\n");
        }
    }

void ConstruirNovaPeca()
    {
    }
